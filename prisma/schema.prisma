datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model File {
  id   String @id @unique @default(uuid())
  blob Bytes

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  image     Image?
  Resume    Resume?
}

model Image {
  file   File   @relation(fields: [fileId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  fileId String @unique

  contentType String
  altText     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User?
}

model Role {
  id   String @id @unique @default(cuid())
  name String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users       User[]
  permissions Permission[]
}

model Permission {
  id   String @id @unique @default(cuid())
  name String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  roles Role[]
}

model User {
  id       String  @id @unique @default(cuid())
  email    String  @unique
  username String  @unique
  name     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  image            Image?  @relation(fields: [imageId], references: [fileId])
  imageId          String? @unique
  stripeCustomerId String?

  password               Password?
  jobs                   Job[]
  resumes                Resume[]
  roles                  Role[]
  Session                Session[]
  gettingStartedProgress GettingStartedProgress?
  subscriptions          Subscription[]
  builderResumes         BuilderResume[]
}

model Password {
  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

model Verification {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  /// The type of verification, e.g. "email" or "phone"
  type String

  /// The thing we're trying to verify, e.g. a user's email or phone number
  target String

  /// The secret key used to generate the otp
  secret String

  /// The algorithm used to generate the otp
  algorithm String

  /// The number of digits in the otp
  digits Int

  /// The number of seconds the otp is valid for
  period Int

  /// When it's safe to delete this verification
  expiresAt DateTime?

  @@unique([target, type])
}

model Session {
  id             String   @id @default(uuid())
  createdAt      DateTime @default(now())
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         String
  expirationDate DateTime
}

model Job {
  id                String   @id @unique @default(cuid())
  title             String
  content           String
  extractedKeywords String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  builderResumes BuilderResume[]
  scores         ResumeScore[]
  owner          User?           @relation(fields: [ownerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  ownerId        String?
}

model Experience {
  id               String   @id @unique @default(cuid())
  employer         String
  role             String
  startDate        String?
  endDate          String?
  city             String?
  state            String?
  country          String?
  responsibilities String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  resume           Resume   @relation(fields: [resumeId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  resumeId         String

  @@unique([resumeId, employer, role], name: "resumeEmployerRoleIdentifier")
}

model Education {
  id             String   @id @unique @default(cuid())
  school         String
  field          String
  graduationDate DateTime
  city           String
  state          String
  country        String
  achievements   String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  resume         Resume   @relation(fields: [resumeId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  resumeId       String

  @@unique([resumeId, school, field], name: "resumeSchoolFieldIdentifier")
}

model Skill {
  id        String   @id @unique @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  resume    Resume   @relation(fields: [resumeId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  resumeId  String

  @@unique([resumeId, name], name: "resumeSkillIdentifier")
}

model Resume {
  id         String       @id @unique @default(cuid())
  title      String?
  firstName  String?
  lastName   String?
  email      String?
  phone      String?
  city       String?
  state      String?
  country    String?
  summary    String?
  experience Experience[]
  skills     Skill[]
  education  Education[]
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  file       File?        @relation(fields: [fileId], references: [id])
  fileId     String?      @unique
  owner      User         @relation(fields: [ownerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  ownerId    String
}

model GettingStartedProgress {
  id                 String   @id @unique @default(cuid())
  createdAt          DateTime @default(now())
  updatedAt          DateTime @default(now()) @updatedAt
  hasSavedJob        Boolean
  hasSavedResume     Boolean
  hasTailoredResume  Boolean
  hasGeneratedResume Boolean
  tailorCount        Int      @default(0)
  generateCount      Int      @default(0)
  analysisCount      Int      @default(0)
  downloadCount      Int      @default(0)
  outreachCount      Int      @default(0)
  owner              User     @relation(fields: [ownerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  ownerId            String   @unique
}

model Subscription {
  id                   String  @id @unique @default(cuid())
  owner                User?   @relation(fields: [ownerId], references: [id])
  ownerId              String?
  stripeCustomerId     String
  active               Boolean
  stripeSubscriptionId String? @unique
  stripeProductId      String
  stripePriceId        String
  name                 String
}

model BuilderResume {
  id              String                  @id @default(cuid())
  createdAt       DateTime                @default(now())
  updatedAt       DateTime                @updatedAt
  userId          String?
  jobId           String?
  name            String?
  role            String?
  email           String?
  phone           String?
  location        String?
  website         String?
  about           String?
  image           String?
  nameColor       String?
  font            String?
  layout          String?
  visibleSections BuilderVisibleSections?
  user            User?                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  job             Job?                    @relation(fields: [jobId], references: [id], onDelete: Cascade)
  experiences     BuilderExperience[]
  education       BuilderEducation[]
  skills          BuilderSkill[]
  hobbies         BuilderHobby[]
  headers         BuilderHeaders?
  scores          ResumeScore[]

  @@index([userId])
}

model BuilderVisibleSections {
  id              String        @id @default(cuid())
  about           Boolean
  experience      Boolean
  education       Boolean
  skills          Boolean
  hobbies         Boolean
  personalDetails Boolean
  photo           Boolean
  resumeId        String        @unique
  resume          BuilderResume @relation(fields: [resumeId], references: [id], onDelete: Cascade)
}

model BuilderExperience {
  id           String                         @id @default(cuid())
  role         String?
  company      String?
  startDate    String?
  endDate      String?
  resumeId     String
  resume       BuilderResume                  @relation(fields: [resumeId], references: [id], onDelete: Cascade)
  descriptions BuilderExperienceDescription[]

  @@index([resumeId])
}

model BuilderExperienceDescription {
  id           String            @id @default(cuid())
  content      String?
  order        Int
  experienceId String
  experience   BuilderExperience @relation(fields: [experienceId], references: [id], onDelete: Cascade)

  @@index([experienceId])
}

model BuilderEducation {
  id          String        @id @default(cuid())
  school      String?
  degree      String?
  startDate   String?
  endDate     String?
  description String?
  resumeId    String
  resume      BuilderResume @relation(fields: [resumeId], references: [id], onDelete: Cascade)

  @@index([resumeId])
}

model BuilderSkill {
  id       String        @id @default(cuid())
  name     String?
  resumeId String
  resume   BuilderResume @relation(fields: [resumeId], references: [id], onDelete: Cascade)

  @@index([resumeId])
}

model BuilderHobby {
  id       String        @id @default(cuid())
  name     String?
  resumeId String
  resume   BuilderResume @relation(fields: [resumeId], references: [id], onDelete: Cascade)

  @@index([resumeId])
}

model BuilderHeaders {
  id               String        @id @default(cuid())
  experienceHeader String?
  skillsHeader     String?
  hobbiesHeader    String?
  educationHeader  String?
  aboutHeader      String?
  detailsHeader    String?
  resumeId         String        @unique
  resume           BuilderResume @relation(fields: [resumeId], references: [id], onDelete: Cascade)
}

model Analysis {
  id         String   @id @default(cuid())
  title      String   @default("")
  company    String   @default("")
  jdText     String   @default("")
  resumeTxt  String
  resumeData String?
  fitPct     Int?
  feedback   String?
  peopleJson String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model ResumeScore {
  id               String        @id @default(cuid())
  resumeId         String
  jobId            String?
  overallScore     Int           @default(0)
  keywordScore     Int           @default(0)
  metricsScore     Int           @default(0)
  actionVerbsScore Int           @default(0)
  lengthScore      Int           @default(0)
  formattingScore  Int           @default(0)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  resume           BuilderResume @relation(fields: [resumeId], references: [id], onDelete: Cascade)
  job              Job?          @relation(fields: [jobId], references: [id], onDelete: SetNull)

  @@unique([resumeId, jobId])
  @@index([resumeId])
  @@index([createdAt])
}
